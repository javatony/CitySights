<div class="login-form">
  <h1>Login</h1>

  <%=form_tag  '/login' do %>
  <p class="login-field">
   <strong><%= label_tag :email %></strong><br>
    <%= text_field_tag :email, nil, placeholder: "Email", class:"form-control" %>
  </p>
  <p>
   <strong> <%= label_tag :password%></strong><br>
    <%= password_field_tag :password, nil, placeholder: "Password", class:"form-control" %>
  </p>

  <%= submit_tag "Log in", class: "btn btn-block" %>
  <% end %>
</div>